@import base

bgImage(bgUrl)
  background: "url(%s)" % bgUrl
  background-position: center
  &:before
    content: ""
    position: absolute
    display: block
    left: 0
    right: 0
    top: 0
    bottom: 0
    background: alpha(#fff, .75)
    
bgCover(bgUrl)
  bgImage(bgUrl)
  background-repeat: no-repeat
  background-size: cover
  
bgContain(bgUrl)
  bgImage(bgUrl)
  background-repeat: no-repeat
  background-size: contain

//
// Modules
//

html, body, .page
  position: absolute
  width: 100%
  height: 100%
  overflow: hidden
  
.page
  opacity: 0
  text-align: center
  font-weight: bold
  pointer-events: none
  line-height: 1.5
  text-shadow: 0 0 .2em alpha(#000, .2)
  user-select: none

.page .inner
  position: absolute
  width: 100%
  
.page .inner *:first-child
  margin-top: 0
.page .inner *:last-child
  margin-bottom: 0

.page.show
  opacity: 1
  pointer-events: auto

.page h1
  font-size: 128px
  margin: 1em 0 0 0
  
.page h2
  font-size: 64px
  margin: 1em 0 0 0
  
.page h3
  font-size: 48px
  margin: 1em 0 0 0
  
.page strong
  color: #ddd;
  -webkit-text-stroke: .03em black
  
.page a
  color: #aaa;
  
.page a:hover
  text-decoration: none

.page p
  font-size: 32px
  width: 50%
  text-align: left
  margin: 1em auto 0 auto

.page ul,
.page ol
  font-size: 32px
  text-align: left
  width: 50%
  margin: 1em auto 0 auto
  
.page ul>li
  list-style-type: disc;
.page ol>li
  list-style-type: decimal;
    
.page img
  display: block
  font-size: 32px
  margin: 32px auto 0 auto

.page.background-sample
  bgCover("http:////placebear.com/640/480")
